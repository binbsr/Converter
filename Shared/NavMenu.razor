<div class="top-row pl-4">
    <h3 class="title is-3">
        <a href="">
            <span class="icon">
                <i class="fas fa-exchange-alt"></i>
            </span>
            Converter
        </a>
    </h3>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/length" Match="NavLinkMatch.All">
                <span class="icon">
                    <i class="fas fa-ruler"></i>
                </span>
                लम्बाइ (Length)
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/area" Match="NavLinkMatch.All">
                <span class="icon">
                    <i class="fas fa-square"></i>
                </span>
                क्षेत्रफल (Area)
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/volume" Match="NavLinkMatch.All">
                <span class="icon">
                    <i class="fas fa-cube"></i>
                </span>
                आयतन (Volume)
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
