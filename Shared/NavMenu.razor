@inject IStringLocalizer<NavMenu> L

<MudPaper Width="250px" Class="d-inline-flex py-3" Square="true">
    <MudNavMenu Class="mud-width-full">
        <MudNavLink Href="/length" Icon="@Icons.Filled.LinearScale">@L["Length"]</MudNavLink>
        <MudNavLink Href="/area" Icon="@Icons.Filled.SpaceDashboard">@L["Area"]</MudNavLink>
        <MudNavLink Href="/volume" Icon="@Icons.Filled.FilterAlt">@L["Volume"]</MudNavLink>
        <MudNavLink Href="/weight" Icon="@Icons.Filled.Circle">@L["Weight"]</MudNavLink>
        <MudNavGroup Title="More" Icon="@Icons.Filled.More" Expanded="true">
            <MudNavLink Href="/currency" Icon="@Icons.Filled.Money" IconColor="Color.Success">@L["Currency"]</MudNavLink>
            <MudNavLink Href="/prefixes" Icon="@Icons.Filled.SkipPrevious" IconColor="Color.Info">@L["Prefixes"]</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudPaper>
